{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/direct-connect",
      "dest": "/api/direct-connect.js"
    },
    {
      "src": "/api/mongo-debug",
      "dest": "/api/mongo-debug.js"
    },
    {
      "src": "/api/db-test",
      "dest": "/api/db-test.js"
    },
    {
      "src": "/api/keepalive",
      "dest": "/api/keepalive.js"
    },
    {
      "src": "/api/api-routes",
      "dest": "/api/api-routes.js"
    },
    {
      "src": "/api/auth/(.*)",
      "dest": "/index.js"
    },
    {
      "src": "/api/image/(.*)",
      "dest": "/index.js"
    },
    {
      "src": "/api/chat/(.*)",
      "dest": "/index.js"
    },
    {
      "src": "/api/artworks/(.*)",
      "dest": "/index.js"
    },
    {
      "src": "/api/home/(.*)",
      "dest": "/index.js"
    },
    {
      "src": "/api/terms/(.*)",
      "dest": "/index.js"
    },
    {
      "src": "/api/special-requests/(.*)",
      "dest": "/index.js"
    },
    {
      "src": "/api/reports/(.*)",
      "dest": "/index.js"
    },
    {
      "src": "/api/transactions/(.*)",
      "dest": "/index.js"
    },
    {
      "src": "/api/reviews/(.*)",
      "dest": "/index.js"
    },
    {
      "src": "/api/follow/(.*)",
      "dest": "/index.js"
    },
    {
      "src": "/api/notifications/(.*)",
      "dest": "/index.js"
    },
    {
      "src": "/api/health",
      "dest": "/index.js"
    },
    {
      "src": "/api/db-test",
      "dest": "/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.js"
    }
  ],
  "functions": {
    "api/db-test.js": {
      "memory": 1024,
      "maxDuration": 15
    },
    "api/keepalive.js": {
      "memory": 512,
      "maxDuration": 10
    },
    "api/mongo-debug.js": {
      "memory": 512,
      "maxDuration": 15
    },
    "api/direct-connect.js": {
      "memory": 1024,
      "maxDuration": 20
    },
    "api/api-routes.js": {
      "memory": 256,
      "maxDuration": 10
    },
    "index.js": {
      "memory": 2048,
      "maxDuration": 90
    }
  },
  "crons": [
    {
      "path": "/api/keepalive",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/health",
      "schedule": "*/10 * * * *"
    },
    {
      "path": "/api/db-test",
      "schedule": "*/15 * * * *"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "MONGODB_CONNECTION_TIMEOUT": "30000",
    "MONGODB_SOCKET_TIMEOUT": "60000",
    "MONGODB_SERVER_SELECTION_TIMEOUT": "30000",
    "MONGODB_MAX_RETRY_ATTEMPTS": "5",
    "MONGODB_BASE_RETRY_DELAY": "1000"
  }
}
