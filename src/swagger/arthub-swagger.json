  "paths": {
    "/api/auth/register": {
      "post": {
        "tags": ["Auth"],
        "summary": "تسجيل مستخدم جديد",
        "description": "إنشاء حساب جديد للمستخدم",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["name", "email", "password", "phone", "role"],
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "أحمد محمد"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "ahmed@example.com"
                  },
                  "password": {
                    "type": "string",
                    "minLength": 6,
                    "example": "123456"
                  },
                  "phone": {
                    "type": "string",
                    "example": "+201234567890"
                  },
                  "role": {
                    "type": "string",
                    "enum": ["user", "artist"],
                    "example": "artist"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "تم التسجيل بنجاح",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessResponse"
                }
              }
            }
          },
          "400": {
            "description": "بيانات غير صحيحة",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
