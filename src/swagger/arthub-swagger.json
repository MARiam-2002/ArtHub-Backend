      "post": {
        "tags": ["Auth"],
        "summary": "تسجيل الدخول",
        "description": "تسجيل الدخول للمستخدم",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "ahmed@example.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "123456"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "تم تسجيل الدخول بنجاح",
