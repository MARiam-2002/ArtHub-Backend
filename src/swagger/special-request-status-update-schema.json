{
  "SpecialRequestStatusUpdate": {
    "type": "object",
    "required": ["status"],
    "properties": {
      "status": {
        "type": "string",
        "enum": ["pending", "accepted", "rejected", "in_progress", "review", "completed", "cancelled"],
        "description": "الحالة الجديدة للطلب",
        "example": "accepted"
      },
      "response": {
        "type": "string",
        "minLength": 10,
        "maxLength": 1000,
        "description": "رد أو ملاحظات إضافية من الفنان",
        "example": "سأقوم بتنفيذ طلبك خلال أسبوع من الآن"
      },
      "estimatedDelivery": {
        "type": "string",
        "format": "date-time",
        "description": "تاريخ التسليم المتوقع (مطلوب عند القبول)",
        "example": "2024-01-15T10:00:00.000Z"
      },
      "quotedPrice": {
        "type": "number",
        "minimum": 0,
        "description": "السعر المقتبس من الفنان (مطلوب عند القبول)",
        "example": 500
      }
    }
  },
  "SpecialRequestStatusUpdateResponse": {
    "type": "object",
    "properties": {
      "success": {
        "type": "boolean",
        "example": true
      },
      "message": {
        "type": "string",
        "example": "تم تحديث حالة الطلب إلى \"مقبول\" بنجاح"
      },
      "data": {
        "type": "object",
        "properties": {
          "specialRequest": {
            "$ref": "#/components/schemas/SpecialRequest"
          }
        }
      },
      "meta": {
        "type": "object",
        "properties": {
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "example": "2024-01-08T10:00:00.000Z"
          },
          "userId": {
            "type": "string",
            "example": "60d0fe4f5311236168a109ca"
          }
        }
      }
    }
  }
}
