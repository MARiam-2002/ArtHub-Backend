{
  "name": "arthub-backend",
  "version": "1.0.0",
  "description": "API backend for ArtHub platform",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "vercel-build": "echo 'Building ArtHub Backend...'",
    "test-db": "node -e \"import('mongoose').then(mongoose => mongoose.connect(process.env.CONNECTION_URL).then(() => console.log('✅ Database connection successful')).catch(err => console.error('❌ Database connection failed:', err.message)))\"",
    "test-db-native": "node -e \"const mongoose = require('mongoose'); mongoose.connect(process.env.CONNECTION_URL).then(() => console.log('✅ Database connection successful')).catch(err => console.error('❌ Database connection failed:', err.message))\"",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathIgnorePatterns=integration",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js integration",
    "test:auth": "node --experimental-vm-modules node_modules/jest/bin/jest.js auth",
    "test:user": "node --experimental-vm-modules node_modules/jest/bin/jest.js user",
    "test:artwork": "node --experimental-vm-modules node_modules/jest/bin/jest.js artwork",
    "test:image": "node --experimental-vm-modules node_modules/jest/bin/jest.js image",
    "test:chat": "node --experimental-vm-modules node_modules/jest/bin/jest.js chat",
    "test:notification": "node --experimental-vm-modules node_modules/jest/bin/jest.js notification",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "db:seed": "node scripts/seed.js"
  },
  "engines": {
    "node": "18.x || >= 16"
  },
  "keywords": [
    "art",
    "marketplace",
    "api",
    "backend"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.7.8",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "chalk": "^5.4.1",
    "cloudinary": "^1.40.0",
    "cookie-session": "^2.0.0",
    "cors": "^2.8.5",
    "countries-list": "^3.1.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.18.1",
    "firebase-admin": "^13.4.0",
    "googleapis": "^144.0.0",
    "http-status-code": "^2.1.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.1",
    "libphonenumber-js": "^1.11.15",
    "mongoose": "^7.4.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nanoid": "^4.0.2",
    "node-fetch": "^3.3.2",
    "node-mailer": "^0.1.1",
    "node-schedule": "^2.1.1",
    "nodemailer": "^6.9.4",
    "nodemon": "^3.1.10",
    "passport": "^0.6.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "pdfkit": "^0.13.0",
    "randomstring": "^1.3.0",
    "slugify": "^1.6.6",
    "socket.io": "^4.8.1",
    "stripe": "^13.4.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "voucher-code-generator": "^1.3.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.4",
    "prettier": "^3.2.5",
    "supertest": "^6.3.3"
  }
}
